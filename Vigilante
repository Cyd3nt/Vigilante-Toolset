#!/bin/bash
# Written by: M.B. Hudson (2020) 
sudo
clear
for i in {80..226} {226..80} ; do echo -en "\e[38;5;${i}mBy:M.B. Hudson \e[0m" ; done ; echo
sleep 2

 function Vigilance_Recon
{
option=0
until [ "$option" = "1" ]; do
echo "  1.) Connect to TOR/Proxy                 4.) Full Port Scan                t.) Target Notes"
echo "  2.) Dissconnect TOR/PROXY                5.) Custom Port Scan"
echo "  3.) Nmap                                 6.) Custom Proxy"
echo -e "                                                                           \e[41m b.) Main Menu" "\e[49m"
echo -n "vigilante@torhunter:~#:"
read option
echo ""
case $option in
    1 ) sudo terminator 2>/dev/null -e "sudo /home/binbash/Vigilante-Toolset/proxy.sh" &  ;;
    2 ) sudo service tor stop ;;
    3 ) sudo nmap 127.0.0.1 -PN ;;
    4 ) sudo terminator 2>/dev/null -e "sudo /home/binbash/Vigilante-Toolset/nmap.sh" &  ;; 
    5 ) sudo terminator 2>/dev/null -e "sudo /home/binbash/Vigilante-Toolset/cport.sh" &  ;;
    6 ) sudo terminator 2>/dev/null -e "sudo /home/binbash/Vigilante-Toolset/cproxy.sh" & ;;
    t ) sudo terminator 2>/dev/null -e "sudo nano /home/binbash/Vigilante-Toolset/targets.txt" &  ;;    
    b ) main_menu ;;
    * ) tput setf 4;echo "echo -n "vigilante@torhunter:~#:"";tput setf 4; 
esac
done
 }

 
 function Vengeance_Exploit 
{
option=0
until [ "$option" = "2" ]; do
echo "  1.) Database Exploit/Injection             5.) Automated Password Cracking    t.) Target Notes"
echo "  2.) XSS/Vulnerability Scan                 6.) DDoS(Xerxes)"
echo "  3.) Full Site Mapper                       7.) DDoS(Xerxes x4) Port 8000"
echo "  4.) Directory Scan                         8.) Customized DDoS"
echo -e "                                                                           \e[41m b.) Main Menu" "\e[49m"
echo -n "vigilante@torhunter:~#:"
read option
echo ""
case $option in
    1 ) sudo terminator 2>/dev/null -e "sudo /home/binbash/Vigilante-Toolset/sql.sh" &  ;;
    2 ) sudo terminator 2>/dev/null -e "sudo nikto -host 127.0.0.1 -port 8000" &  ;;
    3 ) sudo terminator 2>/dev/null -e "sudo uniscan -u http://127.0.0.1:8000 -qwedsrgj" &  ;;
    4 ) sudo terminator 2>/dev/null -e "sudo uniscan -u http://127.0.0.1:8000 -q" &  ;;
    5 ) sudo terminator 2>/dev/null -e "sudo /home/binbash/Vigilante-Toolset/bruTOR.sh" &  ;;
    6 ) etherape 2>/dev/nul | sudo terminator 2>/dev/null -e "sudo /home/binbash/Vigilante-Toolset/ddos.sh" & ;;
    7 ) etherape 2>/dev/nul | sudo terminator 2>/dev/null -e "sudo /home/binbash/Vigilante-Toolset/ddosx4.sh" & ;;
    8 ) etherape 2>/dev/nul | sudo terminator 2>/dev/null -e "sudo /home/binbash/Vigilante-Toolset/cDDoS" &  ;;
    t ) sudo terminator 2>/dev/null -e "sudo nano /home/binbash/Vigilante-Toolset/targets.txt" &   ;;
    b ) main_menu ;;
    * ) tput setf 4;echo "echo -n "vigilante@torhunter:~#:"";tput setf 4; 
esac
done
 }

clear
function Verbose_Report
{
option=0
until [ "$option" = "3" ]; do
 echo "  1.) Geolocate IP on a Map                                                         t.) Target Notes"
 echo "  2.) File Uploader (Send link is email)"
 echo "  3.) Anonymous E-Mail"
 echo -e "                                                                           \e[41m b.) Main Menu" "\e[49m"
 echo -n "vigilante@torhunter:~#:"
 read option
 echo ""
 case $option in
 1 ) xdg-open 2>/dev/null https://iplocation.com/ ;;
 2 ) /home/binbash/.local/share/torbrowser/tbb/x86_64/tor-browser_en-US/Browser/start-tor-browser https://www.filedropper.com/ ;;
 3 ) /home/binbash/.local/share/torbrowser/tbb/x86_64/tor-browser_en-US/Browser/start-tor-browser https://protonirockerxow.onion/ --no-remote ;;
 t ) terminator 2>/dev/null -e "sudo nano /home/binbash/Vigilante-Toolset/targets.txt" &  ;;
 secret ) sudo terminator 2>/dev/null -e "sudo nano /home/binbash/Vigilante-Toolset/wordlists/passswords.txt" &  ;;
 b ) main_menu ;;
 * ) tput setf 3;echo "echo -n "vigilante@torhunter:~#:"";tput setf 3;
 esac
 done
}

